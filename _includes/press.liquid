{% assign press = site.data[page.language].press %}
{% assign posts=site.posts | where:"language", page.language %}

<section class="hero-unit unit">
    <canvas id="pixie" class="bg-anim"></canvas>

    <article class="wrapper">
        <h2 class="section-headline ClearBottom">{{ press.headline }}</h2>
        <div class="section-one btn-press-unit">
            <a href="{{ press.path-txt }}" download>
                <div class="cell">
                    <img class="btn-getpress" src="{{ page.base_dir }}images/btn/txt-pink.png">
                    <p>Download</p>
                    <div>{{ press.description }}</div>
                </div>
            </a>
            <a href="{{ press.path-img }}">
                <div class="cell">
                    <img class="btn-getpress last" src="{{ page.base_dir }}images/btn/pdf-blue.png">
                    <p>Download</p>
                    <div>Screenshots &amp; Images</div>
                </div>
            </a>
            <a href="{{ press.path-kit }}">
                <div class="cell">
                    <img class="btn-getpress last" src="{{ page.base_dir }}images/btn/pressfolder.png">
                    <p>Download</p>
                    <div>{{ press.folder }}</div>
                </div>
            </a>
        </div>
    </article>

    <article class="wrapper">
        <h3 class="section-headline md">{{ press.publication.headline }}</h3>
        <ul class="press-publications">
        {% for release in posts %}
            <li class="release-item">
                {% include release_item.liquid %}
            </li>
        {% endfor %}
        </ul>
    </article>
</section>