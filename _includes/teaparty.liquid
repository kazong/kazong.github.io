{% assign event_item = site.data[page.language].event_item %}
{% assign eventunit = event_item.eventunit %}
{% assign prizeunit = event_item.prizeunit %}
{% assign screenshots = event_item.screenshots %}
{% assign descriptionunit = event_item.descriptionunit %}
{% assign gamesunit = event_item.eventgamesunit %}
{% assign challengeunit = event_item.challengeunit %}

<section class="event-unit game unit">
    <article class="section-textbox">
        <p class="event-headline">The Brexit Tea Party</p>
        <div id="brexit" class="game">
        </div>
		<div id="gameOver" class="game-over" style="display: none">
			<div id="submit" class="apply" style="display: none">
				<div class="th">
					Submit your Score <span>Win the Euro 2.0 - Passport</span>
				</div>
				<img class="neweuropass" src="../images/event/brexit/neweuropass.png"/>
				<input id="userIn" class="nick" placeholder="Passport Holder Name">
				<button class="submit" onclick="onHighScoreSubmit ();">Submit</button>
			</div>

			<div id="board" class="highscores" style="display: none">
				<div class="th">
					Highscores
					<span>Top 100</span>
				</div>
				<div class="scroll">
					<table id="scoreTable" class="score-tbl">
                        <tr>
                            <th>#</th>
                            <th>Applicant</th>
                            <th>Score</th>
                        </tr>
					</table>
				</div>
                <div id="afterBoard" class="replay" onclick="fillHighScoreAfter ();">Replay</div>
			</div>
		</div>
    </article>
    <img class="backimg" src="../images/event/brexit/tea-party.jpg"/>
</section>

<script type="text/javascript" src="phaser.min.js"></script>
<script type="text/javascript" src="jquery.js"></script>
<script type="text/javascript" src="brexit.js"></script>